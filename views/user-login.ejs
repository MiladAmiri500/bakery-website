<body>
    <%- include('partials/sidebar') %>
        <%- include('partials/category-sidebar') %>
            <%- include('partials/header') %>


                <section class="section">
                    <h3>User Login</h3>
                    <form action="/user/login" method="POST" style="text-align: center;">
                        <input type="text" name="username" placeholder="Username" required
                            style="padding: 10px; margin: 10px; border-radius: 8px; border: 1px solid var(--card-border);"><br>
                        <input type="password" name="password" placeholder="Password" required
                            style="padding: 10px; margin: 10px; border-radius: 8px; border: 1px solid var(--card-border);"><br>
                        <button type="submit" class="add-btn">Login</button>
                    </form>
                    <div style="text-align: center; margin-top: 20px;">
                        <a href="/auth/google">Login with Google</a>
                    </div>
                </section>

                <%- include('partials/footer') %>

                    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
                    <script src="/js/scripts.js"></script>
</body>

</html>