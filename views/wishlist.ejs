<!-- views/wishlist.ejs (updated to use product-card and structure) -->
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ayoob Bakery Australia â€” Wishlist</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/sidebar') %>
        <%- include('partials/category-sidebar') %>
            <%- include('partials/header') %>

                <main class="container">
                    <section class="section">
                        <h3>Your Wishlist (<%= wishlist.length %> items)</h3>
                        <% if (wishlist.length===0) { %>
                            <p>Your wishlist is empty. <a href="/products">Continue shopping</a>.</p>
                            <% } else { %>
                                <div class="products-grid active">
                                    <% wishlist.forEach((item, index)=> { %>
                                        <%- include('partials/product-card', { product: item, isWishlisted: true,
                                            quantity: 1 }) %>
                                            <% }); %>
                                </div>
                                <a href="/wishlist/clear" class="btn"
                                    style="background: var(--danger-color); color: white;">Clear Wishlist</a>
                                <% } %>
                    </section>
                </main>

                <%- include('partials/footer') %>

                    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
                    <script src="/js/scripts.js"></script>
</body>

</html>