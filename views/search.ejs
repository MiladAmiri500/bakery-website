<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ayoob Bakery Australia â€” Search Results for "<%= query %>"</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/sidebar') %>
        <%- include('partials/category-sidebar') %>
            <%- include('partials/header') %>

                <main class="container">
                    <header class="category-header">
                        <nav class="breadcrumb">
                            <a href="/">Home</a> >
                            <span>Search Results for "<%= query %>"</span>
                        </nav>
                        <h1>Search Results</h1>
                    </header>

                    <div class="listing-controls">
                        <div class="search-bar">
                            <input type="text" id="search-input" placeholder="Search products..." value="<%= query %>">
                            <button><i class="fa fa-search"></i></button>
                        </div>
                        <div class="control-group">
                            <select id="sort-by">
                                <option value="featured">Sort by: Featured</option>
                                <option value="price-asc">Price: Low to High</option>
                                <option value="price-desc">Price: High to Low</option>
                            </select>
                            <div class="view-toggle">
                                <button id="grid-view-btn" class="active"><i class="fas fa-th-large"></i></button>
                                <button id="list-view-btn"><i class="fas fa-list"></i></button>
                                <!-- Removed hidden class -->
                            </div>
                        </div>
                    </div>

                    <p>Showing <%= products.length %>
                            product<%= products.length !==1 ? 's' : '' %>
                    </p>

                    <div id="product-grid" class="products-grid">
                        <% if (products.length===0) { %>
                            <div id="no-results-message">
                                <h3>No Products Found</h3>
                            </div>
                            <% } else { %>
                                <% products.forEach(product=> { %>
                                    <%- include('partials/product-card', { product, isWishlisted: user ?
                                        user.wishlist.includes(product._id) : false, quantity: 1 }) %>
                                        <% }) %>
                                            <% } %>
                    </div>

                    <div id="pagination-controls"></div>
                </main>

                <%- include('partials/footer') %>

                    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
                    <script src="/js/scripts.js"></script>
</body>

</html>