    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800&family=Poppins:wght@300;400;500;600&display=swap"
        rel="stylesheet">
    <!-- Swiper -->
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        :root {
            /* Warm, earthy, and trustworthy bakery palette (overrides your green styles) */
            --primary-color: #8B4513;
            /* Saddle Brown (deep, rich) */
            --secondary-color: #FDF8F0;
            /* Warm Off-White (like unbleached flour) */
            --text-color: #4A3F35;
            /* Dark, earthy brown */
            --accent-color: #E0A96D;
            /* Soft Golden Tan (like a crust) */
            --bg-color: #FFFFFF;
            --box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
            --border-radius: 12px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.7;
            color: var(--text-color);
            background-color: var(--bg-color);
            overflow-x: hidden;
            /* Prevents horizontal scroll from animations */
        }

        /* --- Typography --- */
        h1,
        h2,
        h3 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-color);
            font-weight: 700;
            line-height: 1.3;
        }

        h1 {
            font-size: 4.5rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
        }

        h2 {
            font-size: 3rem;
            text-align: center;
            margin-bottom: 20px;
        }

        h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        p {
            margin-bottom: 20px;
            font-size: 1.05rem;
        }

        .text-lead {
            font-size: 1.25rem;
            color: var(--text-color);
            font-weight: 400;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .section-padding {
            padding: 80px 20px;
        }

        /* --- Buttons --- */
        .btn {
            display: inline-block;
            padding: 12px 30px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: var(--accent-color);
            color: var(--text-color);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-primary:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-secondary {
            background-color: transparent;
            color: white;
            border: 2px solid white;
        }

        .btn-secondary:hover {
            background-color: white;
            color: var(--text-color);
        }

        /* --- Hero Section --- */
        .hero {
            position: relative;
            height: 80vh;
            /* Shorter for better mobile */
            background-image: url('https://media.istockphoto.com/id/1419082992/photo/fresh-bread.jpg?b=1&s=612x612&w=0&k=20&c=3PV9XLXvWjZhkhPFgMtlJ33sZKy5H9W_FSgUpTKaZY4=');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero::before {
            /* Dark overlay for readability */
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
        }

        .hero p {
            font-size: 1.3rem;
            color: white;
            opacity: 0.9;
            margin: 20px 0 30px;
        }

        .hero .hero-actions {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        /* --- Welcome Section --- */
        .welcome-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            align-items: center;
            gap: 50px;
        }

        .welcome-image img {
            width: 100%;
            height: auto;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
        }

        /* --- Featured Categories --- */
        .categories-section {
            background-color: var(--secondary-color);
        }

        .categories-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            margin-top: 40px;
        }

        .category-card {
            background: var(--bg-color);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .category-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .category-card-info {
            padding: 30px 20px;
        }

        .category-card-info a {
            text-decoration: none;
            color: var(--primary-color);
            font-weight: 600;
        }

        /* --- Our Promise Section --- */
        .promise-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            align-items: center;
            gap: 80px;
        }

        .promise-image img {
            width: 100%;
            height: auto;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
        }

        .promise-list {
            list-style: none;
            margin-top: 20px;
        }

        .promise-list li {
            font-size: 1.1rem;
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
        }

        .promise-list i {
            font-size: 1.2rem;
            color: var(--primary-color);
            margin-right: 15px;
            padding-top: 5px;
        }

        /* --- Testimonials --- */
        .testimonials-section {
            background-color: var(--secondary-color);
        }

        .testimonial-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            margin-top: 40px;
        }

        .testimonial-card {
            background: var(--bg-color);
            padding: 30px;
            border-radius: var(--border-radius);
            border-top: 4px solid var(--accent-color);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .testimonial-card i {
            font-size: 2rem;
            color: var(--accent-color);
        }

        .testimonial-text {
            font-style: italic;
            margin: 15px 0;
        }

        .testimonial-author {
            font-weight: 600;
        }

        .stars {
            color: var(--accent-color);
        }

        /* --- Gallery Section (Expanded) --- */
        .gallery-section h2 {
            margin-bottom: 10px;
        }

        .gallery-subtitle {
            text-align: center;
            font-size: 1.2rem;
            margin-bottom: 40px;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: auto auto auto;
            /* Expanded for more items */
            gap: 15px;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: var(--border-radius);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.4s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.1);
        }

        /* Masonry-like effect with more items */
        .item-1 {
            grid-column: 1 / 3;
            grid-row: 1 / 3;
        }

        .item-2 {
            grid-column: 3;
            grid-row: 1;
        }

        .item-3 {
            grid-column: 4;
            grid-row: 1;
        }

        .item-4 {
            grid-column: 3;
            grid-row: 2;
        }

        .item-5 {
            grid-column: 4;
            grid-row: 2;
        }

        .item-6 {
            grid-column: 1 / 3;
            grid-row: 3;
        }

        .item-7 {
            grid-column: 3 / 5;
            grid-row: 3;
        }

        /* --- Promotions Section (New, using your promo banners) --- */
        .promo-section {
            background-color: var(--secondary-color);
            padding: 60px 20px;
        }

        .promo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .promo-card {
            background: var(--bg-color);
            padding: 30px;
            border-radius: var(--border-radius);
            text-align: center;
            box-shadow: var(--box-shadow);
            transition: transform 0.3s;
        }

        .promo-card:hover {
            transform: scale(1.05);
        }

        .promo-card h3 {
            color: var(--accent-color);
        }

        /* --- Animations --- */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* --- Responsive --- */
        @media (max-width: 992px) {
            h1 {
                font-size: 3.5rem;
            }

            h2 {
                font-size: 2.5rem;
            }

            .main-nav {
                display: none;
            }

            /* Use your sidebar for mobile */
            .welcome-section {
                grid-template-columns: 1fr;
            }

            .categories-grid {
                grid-template-columns: 1fr;
            }

            .promise-section {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .promise-section .promise-image {
                order: -1;
            }

            /* Image on top */
            .testimonial-grid {
                grid-template-columns: 1fr;
            }

            .gallery-grid {
                grid-template-columns: 1fr 1fr;
            }

            /* Simpler grid */
            .item-1 {
                grid-column: 1 / 3;
                grid-row: 1;
            }

            .promo-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2.5rem;
            }

            h2 {
                font-size: 2rem;
            }

            .section-padding {
                padding: 60px 20px;
            }

            .hero-actions {
                flex-direction: column;
            }
        }
    </style>
</head>

<body>
    <%- include('partials/sidebar') %>
        <%- include('partials/category-sidebar') %>
            <%- include('partials/header') %>


                <main>
                    <!-- Hero Section (Integrated with your heroBanners) -->
                    <section class="hero">
