                                    <p class="testimonial-author">- Sarah J.</p>
                                    <div class="stars">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                            class="fas fa-star"></i><i class="fas fa-star"></i><i
                                            class="fas fa-star"></i>
                                    </div>
                                </div>
                                <!-- Add more as needed -->
                            </div>
                        </div>
                    </section>

                    <!-- Gallery Section (Expanded with valid images) -->
                    <section class="section-padding">
                        <div class="container fade-in">
                            <h2>Fresh From Our Oven</h2>
                            <p class="gallery-subtitle">Follow our baking journey on social media.</p>
                            <div class="gallery-grid">
                                <div class="gallery-item item-1">
                                    <img src="https://images.squarespace-cdn.com/content/v1/6845e3d83dddfd6b48d7b469/48442c3c-b08b-4361-839c-8478c1d3352f/Dorset+Bakery+2025-9.jpg"
                                        alt="Cozy bakery interior">
                                </div>
                                <div class="gallery-item item-2">
                                    <img src="https://platform.ny.eater.com/wp-content/uploads/sites/6/chorus/uploads/chorus_asset/file/22906525/Blueberry_Muffins_Kate_Previte.jpg?quality=90&strip=all&crop=0,0,100,100"
                                        alt="Dough preparation">
                                </div>
                                <div class="gallery-item item-3">
                                    <img src="https://platform.seattle.eater.com/wp-content/uploads/sites/27/chorus/uploads/chorus_asset/file/9346433/Pratt_Bakery_Nouveau_022.jpg?quality=90&strip=all"
                                        alt="Variety of cakes">
                                </div>
                                <div class="gallery-item item-4">
                                    <img src="https://napervillefreshmarket.com/wp-content/uploads/2024/01/032_DeLuxeFinals-1024x683.webp"
                                        alt="Pastry display">
                                </div>
                                <div class="gallery-item item-5">
                                    <img src="https://www.ndtourism.com/sites/default/files/styles/hero_xs/public/2022-08/bmcvb-brickovenbakery_021-s.jpg?itok=zNobB2fU"
                                        alt="Bakery counter">
                                </div>
                                <div class="gallery-item item-6">
                                    <img src="https://images.squarespace-cdn.com/content/v1/6845e3d83dddfd6b48d7b469/add04ced-db2f-40b1-843a-34b1816c5094/Dorset+Bakery+2025-11.jpg"
                                        alt="Bread making steps">
                                </div>
                                <div class="gallery-item item-7">
                                    <img src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/1a/77/02/e9/sweet-things.jpg?w=900&h=500&s=1"
                                        alt="Bakery assortment">
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Promotions Section (New, using your promo banners) -->
                    <section class="promo-section">
                        <div class="container fade-in">
                            <h2>Current Promotions</h2>
                            <div class="promo-grid">
                                <% heroBanners.forEach(banner=> { %>
                                    <div class="promo-card">
                                        <img src="https://img.freepik.com/free-vector/watercolor-bakery-sale-horizontal-banner-template-with-pastry_23-2149454447.jpg"
                                            alt="<%= banner.title %>">
                                        <h3>
                                            <%= banner.title %>
                                        </h3>
                                        <p>
                                            <%= banner.text %>
                                        </p>
                                        <a href="<%= banner.link %>" class="btn btn-primary">Shop Now</a>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                    </section>
                </main>

                <%- include('partials/footer') %>

                    <!-- Scripts -->
                    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
                    <script src="/js/scripts.js"></script>
                    <script>
                        document.addEventListener('DOMContentLoaded', () => {
                            // Header Scroll Effect (if not in scripts.js)
                            const header = document.getElementById('site-header');
                            window.addEventListener('scroll', () => {
                                if (window.scrollY > 50) {
                                    header.classList.add('scrolled');
                                } else {
                                    header.classList.remove('scrolled');
                                }
                            });

                            // Fade-in on Scroll
                            const fadeElems = document.querySelectorAll('.fade-in');
                            const observer = new IntersectionObserver((entries) => {
                                entries.forEach(entry => {
                                    if (entry.isIntersecting) {
                                        entry.target.classList.add('visible');
                                    }
                                });
                            }, { threshold: 0.1 });
                            fadeElems.forEach(elem => observer.observe(elem));
                        });
                    </script>
</body>

</html>