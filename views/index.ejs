<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ayoob Bakery Australia â€” Bakery Shop</title>
    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800&family=Poppins:wght@300;400;500;600&display=swap"
        rel="stylesheet">
    <!-- Swiper -->
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/sidebar') %>
        <%- include('partials/category-sidebar') %>
            <%- include('partials/header') %>
                <main>
                    <!-- Hero Section -->
                    <!-- Hero Section -->
                    <section class="hero"
                        style="background-image: url('https://thumbs.dreamstime.com/b/artisan-bakery-display-freshly-baked-breads-pastries-rustic-wooden-table-generative-ai-concept-driven-illustration-379337842.jpg'); background-size: cover; background-position: center; height: 80vh;">
                        <div class="hero-content">
                            <h1>Baked with Passion.<br>Served with Heart.</h1>
                            <p>Discover artisan breads, delicate pastries, and sweets, all crafted daily from the finest
                                ingredients.</p>
                            <div class="hero-actions">
                                <a href="/products" class="btn btn-primary">View Our Products</a>
                                <a href="/about" class="btn btn-secondary">Our Story</a>
                            </div>
                        </div>
                    </section>
                    <!-- Welcome Section -->
                    <section class="section-padding">
                        <div class="container welcome-section fade-in">
                            <div class="welcome-text">
                                <h2>Welcome to<br>Ayoob Bakery Australia</h2>
                                <p class="text-lead">We're an artisan bakery with a simple mission: to bring joy to our
                                    community through the craft of traditional baking.</p>
                                <p>Explore our range of fresh bakery items, from breads to sweets. We believe in quality
                                    you can taste, using premium ingredients for every product.</p>
                                <a href="/about" class="btn btn-primary">Learn More About Us</a>
                            </div>
                            <div class="welcome-image">
                                <img src="https://thumbs.dreamstime.com/b/charming-bakery-interior-featuring-wide-assortment-freshly-baked-goods-including-crusty-breads-flaky-croissants-396779288.jpg"
                                    alt="Interior of Ayoob Bakery Australia">
                            </div>
                        </div>
                    </section>
                    <!-- Featured Categories (Matching categories.ejs structure) -->
                    <section class="categories-section section-padding">
                        <div class="container fade-in">
                            <h2>Our Specialties</h2>
                            <div class="category-grid"> <!-- Use .category-grid like in categories.ejs -->
                                <% nestedCategories.forEach(cat=> { %>
                                    <a href="/products?category=<%= cat._id %>" class="category-card">
                                        <div class="category-card-image">
                                            <img src="<%= cat.image || `https://placehold.co/300x250?text=${cat.name}` %>"
                                                alt="<%= cat.name %>">
                                        </div>
                                        <div class="category-card-info">
                                            <h3>
                                                <%= cat.name %>
                                            </h3>
                                            <p>
                                                <%= cat.description || `Explore our selection of
                                                    ${cat.name.toLowerCase()} items.` %>
                                            </p>
                                            <span class="shop-now-link">Shop Now <i
                                                    class="fas fa-arrow-right"></i></span>
                                        </div>
                                    </a>
                                    <% if (cat.subcategories && cat.subcategories.length> 0) { %>
                                        <% cat.subcategories.forEach(sub=> { %>
                                            <a href="/products?category=<%= sub._id %>" class="category-card">
                                                <div class="category-card-image">
                                                    <img src="<%= sub.image || `https://placehold.co/300x250?text=${sub.name}` %>"
                                                        alt="<%= sub.name %>">
                                                </div>
                                                <div class="category-card-info">
                                                    <h3>
                                                        <%= sub.name %>
                                                    </h3>
                                                    <p>
                                                        <%= sub.description || `Explore our selection of
                                                            ${sub.name.toLowerCase()} items.` %>
                                                    </p>
                                                    <span class="shop-now-link">Shop Now <i
                                                            class="fas fa-arrow-right"></i></span>
                                                </div>
                                            </a>
                                            <% }); %>
                                                <% } %>
                                                    <% }); %>
                            </div>
                        </div>
                    </section>
                    <!-- Our Promise Section -->
                    <section class="section-padding">
                        <div class="container promise-section fade-in">
                            <div class="promise-image">
                                <img src="https://static.vecteezy.com/system/resources/thumbnails/054/559/896/small_2x/baker-preparing-fresh-dough-on-a-wooden-tray-in-the-bakery-kitchen-video.jpg"
                                    alt="Baker's hands preparing fresh dough">
                            </div>
                            <div class="promise-text">
                                <h2>Our Simple Promise</h2>
                                <p class="text-lead">We believe that the best food starts with the best ingredients. No
                                    shortcuts, no substitutes. Just pure, honest baking.</p>
                                <ul class="promise-list">
                                    <li><i class="fas fa-check-circle"></i> <strong>Freshly Baked Daily:</strong> Our
                                        ovens start before the sun comes up. What you buy is what we baked today.</li>
                                    <li><i class="fas fa-leaf"></i> <strong>Local & Simple:</strong> We use premium
                                        ingredients for our products.</li>
                                    <li><i class="fas fa-hand-sparkles"></i> <strong>Artisan Craft:</strong> Traditional
                                        techniques for the best taste.</li>
                                </ul>
                            </div>
                        </div>
                    </section>
                    <!-- Testimonials Section -->
                    <section class="testimonials-section section-padding">
                        <div class="container fade-in">
                            <h2>What Our Customers Say</h2>
                            <div class="testimonial-grid">
                                <div class="testimonial-card">
                                    <i class="fas fa-quote-left"></i>
                                    <p class="testimonial-text">"The best bakery items I've ever had. Fresh and
                                        delicious!"</p>
                                    <p class="testimonial-author">- Sarah J.</p>
                                    <div class="stars">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                            class="fas fa-star"></i><i class="fas fa-star"></i><i
                                            class="fas fa-star"></i>
                                    </div>
                                </div>
                                <!-- Add more testimonials as needed -->
                            </div>
                        </div>
                    </section>
                    <!-- Gallery Section -->
                    <section class="section-padding">
                        <div class="container fade-in">
                            <h2>Fresh From Our Oven</h2>
                            <p class="gallery-subtitle">Follow our baking journey on social media.</p>
                            <div class="gallery-grid">
                                <div class="gallery-item item-1">
                                    <img src="https://images.squarespace-cdn.com/content/v1/6845e3d83dddfd6b48d7b469/48442c3c-b08b-4361-839c-8478c1d3352f/Dorset+Bakery+2025-9.jpg"
                                        alt="Cozy bakery interior">
                                </div>
                                <div class="gallery-item item-2">
                                    <img src="https://platform.ny.eater.com/wp-content/uploads/sites/6/chorus/uploads/chorus_asset/file/22906525/Blueberry_Muffins_Kate_Previte.jpg?quality=90&strip=all&crop=0,0,100,100"
                                        alt="Dough preparation">
                                </div>
                                <div class="gallery-item item-3">
                                    <img src="https://platform.seattle.eater.com/wp-content/uploads/sites/27/chorus/uploads/chorus_asset/file/9346433/Pratt_Bakery_Nouveau_022.jpg?quality=90&strip=all"
                                        alt="Variety of cakes">
                                </div>
                                <div class="gallery-item item-4">
                                    <img src="https://napervillefreshmarket.com/wp-content/uploads/2024/01/032_DeLuxeFinals-1024x683.webp"
                                        alt="Pastry display">
                                </div>
                                <div class="gallery-item item-5">
                                    <img src="https://www.ndtourism.com/sites/default/files/styles/hero_xs/public/2022-08/bmcvb-brickovenbakery_021-s.jpg?itok=zNobB2fU"
                                        alt="Bakery counter">
                                </div>
                                <div class="gallery-item item-6">
                                    <img src="https://images.squarespace-cdn.com/content/v1/6845e3d83dddfd6b48d7b469/add04ced-db2f-40b1-843a-34b1816c5094/Dorset+Bakery+2025-11.jpg"
                                        alt="Bread making steps">
                                </div>
                                <div class="gallery-item item-7">
                                    <img src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/1a/77/02/e9/sweet-things.jpg?w=900&h=500&s=1"
                                        alt="Bakery assortment">
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Promotions Section -->
                    <section class="promo-section">
                        <div class="container fade-in">
                            <h2>Current Promotions</h2>
                            <div class="promo-grid">
                                <% heroBanners.forEach(banner=> { %>
                                    <div class="promo-card">
                                        <img src="<%= banner.image || 'https://placehold.co/600x200?text=Promotion+Banner' %>"
                                            alt="<%= banner.title %>">
                                        <h3>
                                            <%= banner.title %>
                                        </h3>
                                        <p>
                                            <%= banner.text %>
                                        </p>
                                        <a href="/products" class="btn btn-primary">Shop Now</a>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                    </section>
                </main>
                <%- include('partials/footer') %>
                    <!-- Scripts -->
                    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
                    <script src="/js/scripts.js"></script>
                    <script>
                        // Fade-in on Scroll
                        const fadeElems = document.querySelectorAll('.fade-in');
                        const observer = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    entry.target.classList.add('visible');
                                }
                            });
                        }, { threshold: 0.1 });
                        fadeElems.forEach(elem => observer.observe(elem));
                    </script>
</body>

</html>