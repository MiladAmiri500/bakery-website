<!doctype html>
<html lang="en">

<head>
    <title>FreshCart â€” Edit Category</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/sidebar') %>
        <%- include('partials/category-sidebar') %>
            <%- include('partials/header') %>
                <%- include('partials/search-row') %>
                    <section class="section">
                        <h3>Edit Category</h3>
                        <form action="/admin/update-category/<%= category._id %>" method="POST"
                            style="margin-bottom: 20px;">
                            <input type="text" name="name" placeholder="Category Name" value="<%= category.name %>"
                                required>
                            <select name="parent">
                                <option value="">No Parent</option>
                                <% categories.forEach(cat=> { %>
                                    <option value="<%= cat._id %>" <%=category.parent &&
                                        category.parent.toString()===cat._id.toString() ? 'selected' : '' %>><%=
                                            cat.name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <input type="text" name="image" placeholder="Image URL" value="<%= category.image %>">
                            <textarea name="description"
                                placeholder="Description"><%= category.description %></textarea>
                            <button type="submit" class="add-btn">Update Category</button>
                        </form>
                        <a href="/admin" class="btn">Back to Admin</a>
                    </section>
                    <%- include('partials/footer') %>
</body>

</html>